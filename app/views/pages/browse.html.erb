<h1>Browse Pages</h1>

<div id="browselinks">
  <%= link_to_remote "All", :url => {:action => :browse }%> |

  <% (0..9).each do |number| %>
	  <%= link_to_remote number.to_s, :url => { :action => :browse, :letter => number.to_s } %> |
  <% end %>

  <% ('A'..'Z').each do |letter| %>
  	<%= link_to_remote letter, :url => { :action => :browse, :letter => letter } %> |
  <% end %>
</div>

<div id="browsecontent">
  <% if @letter && @pages then %>
	  <h3>Pages For: <%= @letter %></h3>
  	<% @pages.each do |page| %>
	  	<%= link_to page.title, page_url(page) %><br/>
  	<% end %>
  <% end %>
</div>
